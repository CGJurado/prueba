  "version": "0.2.0",
  "configurations": [
    {
      "command": "ionic serve --no-open",
      "name": "App",
      "request": "launch",
      "type": "node-terminal",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Chrome",
        "killOnServerStop": true
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:8100",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": ["--incognito"]
    }
  ]
}